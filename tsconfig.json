{
    "compilerOptions": {
      "target": "es2019",
      "noEmitOnError": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2020", "DOM", "DOM.Iterable"],
      "declaration": true,
      "noImplicitOverride": true,
      "outDir": "build/",
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "rootDir": ".",
      "strict": true,
    },
    "include": ["src/**/*.ts", "tools/**/*.ts", "app/**/*.ts"],
    "exclude": []
  }